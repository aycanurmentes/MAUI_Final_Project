<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUI_Final_Project.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAUI_Final_Project"
    Shell.FlyoutBehavior="Disabled">

   <TabBar>
         <Tab Title="Home">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage"/>

        </Tab>
        <Tab Title="Student">
            <ShellContent ContentTemplate="{DataTemplate local:Student}" Route="Student"/>

        </Tab>

        <Tab Title="Course">
            <ShellContent ContentTemplate="{DataTemplate local:Course}" Route="Course"/>

        </Tab>

        <Tab Title="Enroll">
            <ShellContent ContentTemplate="{DataTemplate local:Enroll}" Route="Enroll"/>

        </Tab>
    </TabBar>

</Shell>

